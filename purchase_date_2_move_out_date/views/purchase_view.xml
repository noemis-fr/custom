        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">Purchase Order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">                 
                <field name="date_order" position="after">  

                    <group colspan="2" attrs="{'invisible':[('is_initial_date','=', False)]}">  
                        <!--<field name="min_date_asked_for" invisible="1" readonly="1"/>-->   
                        <field name="is_initial_date" invisible="1" readonly="1"/>  
                        
                        <span class="openerp oe_kanban_color_9" style="padding: 3px;" >
                            /!\Date Théorique/!\
                        </span>                 
                        <div class="oe_clear"/>
                    </group>
                </field>      
                
                <xpath expr="//field[@name='order_line']/tree//field[@name='date_planned']" position="after">
                    <field name="is_initial_date_text" />  
                    <!--<field name="min_date_asked_for" invisible="1"/>-->  
                </xpath>   
                <xpath expr="//field[@name='order_line']/tree" position="attributes">
                    <attribute name="context" >{'manually_changed': True}</attribute>  
                    <!--<field name="min_date_asked_for" invisible="1"/>-->  
                </xpath>   
                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="context" >{'manually_changed': True}</attribute>  
                    <!--<field name="min_date_asked_for" invisible="1"/>-->  
                </xpath>   
                
            </field>            
        </record>
  

